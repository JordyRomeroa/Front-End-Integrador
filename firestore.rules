rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Usuarios
    match /usuarios/{userId} {
      allow read: if request.auth != null &&
                  (
                    // El dueño
                    request.auth.uid == userId ||
                    // Admin puede leer todos
                    get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin'
                  );

      allow write: if request.auth != null &&
                    (
                      request.auth.uid == userId ||
                      get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin'
                    );
    }

    // Para permitir que los usuarios lean solo programadores
    match /usuarios {
      allow list: if request.auth != null &&
                  get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role in ['admin','user'];
    }

    // Asesorías
    match /asesorias/{asesoriaId} {
      allow read: if request.auth != null &&
                  (
                    request.auth.uid == resource.data.usuarioId ||
                    request.auth.uid == resource.data.programadorId
                  );

      allow create: if request.auth != null;

      allow update: if request.auth != null &&
                    request.auth.uid == resource.data.programadorId &&
                    request.resource.data.keys().hasOnly(['estado','mensajeRespuesta']);
    }
  }
}
