rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Usuarios individuales
    match /usuarios/{userId} {
      
      allow read: if true;

      allow write: if request.auth != null &&
                   (request.auth.uid == userId || 
                    get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin');
    }

    match /usuarios {
      
      allow list: if request.auth != null &&
                  get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }

    // Asesor√≠as
    match /asesorias/{asesoriaId} {
      allow read: if request.auth != null &&
                  (request.auth.uid == resource.data.usuarioId || 
                   request.auth.uid == resource.data.programadorId);

      allow create: if request.auth != null;

      allow update: if request.auth != null &&
              request.auth.uid == resource.data.programadorId &&
              request.resource.data.keys().hasAll(['estado','mensajeRespuesta']);

    }

    // Proyectos
    match /proyectos/{proyectoId} {

      allow read: if true; 

      allow create: if request.auth != null &&
                    request.auth.uid == request.resource.data.assignedTo;

      allow update: if request.auth != null &&
                    (request.auth.uid == resource.data.assignedTo || 
                     get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin');

      allow delete: if request.auth != null &&
                    get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }

  }
}
